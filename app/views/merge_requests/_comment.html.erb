<div class="comment" id="comment-<%= comment.id %>">
  <%= link_to('<i class="fa fa-link"></i>'.html_safe, project_merge_request_path(@project, @mr, anchor: "comment-#{comment.id}")) %>
  <%= image_tag gravatar_url(comment.user), class: 'avatar' %>
  <div class="comment-header"><%= comment.user.name %> <span>wrote <%= time_ago_in_words(comment.created_at) %> ago</span></div>
  <div class="comment-body markdown"><%= emojify(comment.content) %></div>
</div>
